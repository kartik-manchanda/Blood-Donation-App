<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".activity.ReceiverActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your details:"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name:"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_name_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:paddingStart="5dp"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_age_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:hint="Age"
                android:paddingStart="5dp"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacingHorizontal="10dp"
                android:layout_marginTop="10dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="Male" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="Female"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile No:"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_mobile_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:hint="Mobile Number"
                android:inputType="number"
                android:paddingStart="5dp"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group:"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_blood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacingHorizontal="10dp"
                android:layout_marginTop="10dp">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="A+" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="B+"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="AB+"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="O+"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="A-"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="B-"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="AB-"/>
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipBackgroundColor="@drawable/chip_color"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:textAppearance="@style/AppTheme.GenderChip"
                    android:text="O-"/>

            </com.google.android.material.chip.ChipGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_location_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:hint="Location"
                android:inputType="text"
                android:paddingStart="5dp"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City:"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_city_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:hint="City"
                android:paddingStart="5dp"
                android:paddingLeft="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/question1_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have a laboratory-confirmed diagnosis of COVID-19?"
                android:maxLines="2"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yes1_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:buttonTint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:textAppearanceMedium" />
                <RadioButton
                    android:id="@+id/no1_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:text="No"
                    android:textAppearance="?android:textAppearanceMedium" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/question2_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have a doctor’s prescription or case sheet?"
                android:maxLines="2"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/yes2_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorAccent"
                    android:text="Yes"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="?android:textAppearanceMedium" />
                <RadioButton
                    android:id="@+id/no2_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorAccent"
                    android:textColor="@color/colorAccent"
                    android:text="No"
                    android:textAppearance="?android:textAppearanceMedium" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_save_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect_donor_and_receiver"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:text="Save"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>



    </LinearLayout>
</ScrollView>
